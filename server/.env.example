# Database Configuration
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_NAME=your_database_name
DB_PORT=3306

# JWT Configuration
# Make sure to use a strong, random string of at least 32 characters in production
JWT_SECRET=your-32-char-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Email Configuration
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-secure-email-password

# Upload Configuration
UPLOAD_URL=http://localhost:5000/uploads/
MAX_FILE_SIZE=5242880 # 5MB in bytes

# Rate Limiting (optional, defaults in code)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100  # Maximum requests per window

# Security Configuration (optional)
CORS_ENABLED=true
SECURE_COOKIES=false # Set to true in production
